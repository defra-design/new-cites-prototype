{% extends "layouts/main.html" %}

{% set pageTitle = "Email notification" %}

{% block beforeContent %}{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">                                              
    
    <h2 class="govuk-heading-m">Email preview</h2>  
    
    {# Metadata Section #}
    <p class="govuk-body">
      <strong>To:</strong> {{ data['your-full-name'] | default("Dean Falconer") }} ({{ data['your-email'] | default("dean@falconers-nest.co.uk") }})
    </p>
    <p class="govuk-body">
      <strong>Subject:</strong> Your CITES permit has been issued
    </p>
    
    <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">

    {# Email Body #}
    <div class="govuk-panel__body">
      <p class="govuk-body">Your CITES permit has been issued.</p>
      <p class="govuk-body">
        Application reference: <strong>{{ data['applicationRef'] | default("AB7N10") }}</strong>
      </p>
      
      
      <p class="govuk-body">
        To view your permit
        <a href="/v13/view-permit" class="govuk-link">
          sign into your CITES account
        </a>
      </p>

      <p class="govuk-body">You must provide the permit to your courier or transporter before shipment.</p>

      <p class="govuk-body">
        The permit expires on <strong>18 August 2026</strong>.
      </p>

      <p class="govuk-body">If you do not ship the specimen before the expiry date, you must apply for a new permit.</p>

      <p class="govuk-body">
        From CITES team<br>
        Animal and Plant Health Agency (APHA)
      </p>
    </div>
  </div>
</div>
{% endblock %}