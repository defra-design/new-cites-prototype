{% extends "layout-with-navigation.html" %}

{% set thisPageTitle = "Application summary" %}
{% set isIssued = data['permitStatus'] == 'Issued' %}

{% block beforeContent %}
<div class="govuk-phase-banner">
  <p class="govuk-phase-banner__content">
    <strong class="govuk-tag govuk-phase-banner__content__tag govuk-tag--green">prototype</strong>
    <span class="govuk-phase-banner__text">
      This is a new service â€“ your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
    </span>
  </p>
</div>

<div class="govuk-breadcrumbs">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <a class="govuk-breadcrumbs__link" href="applicant-dashboard">Your applications</a>
    </li>
    <li class="govuk-breadcrumbs__list-item" aria-current="page">
      {{data['submissionRef'] or "APP-6721"}}/001
    </li>
  </ol>
</div>
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    
    <span class="govuk-caption-xl">{{ data['applicant-business-name'] or "Falconers ltd" }}</span>
    <h1 class="govuk-heading-l">Your application: {{data['applicationRef'] or "APP-6721"}}</h1>

    <div class="govuk-inset-text">
      Your application was submitted on 18 February 2026
    </div>

    <h2 class="govuk-heading-m govuk-!-margin-top-9">About the permit</h2>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Permit type</dt>
        <dd class="govuk-summary-list__value">
          {{ data['permitType'] | capitalize or "Export" }}
        </dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m">Contact details</h2>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Agent details</dt>
        <dd class="govuk-summary-list__value">
          {{data['your-full-name'] or "Alex Agent"}}<br>
          {{data['your-business-name'] or "Global Shipping Ltd"}}<br>
          {{data['your-email'] or "alex@globalship.com"}}<br>
          {{data['agent-address'] or "22 Prospect Wharf, Folkestone, FO23 6MY"}}
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Applicant details</dt>
        <dd class="govuk-summary-list__value">
          {{data['applicant-full-name'] or "Janine Falconer"}}<br>
          {{data['applicant-business-name'] or "Falconers Ltd"}}<br>
          {{data['applicant-email'] or "j.falconer@business.com"}}<br>
          {{data['your-address'] or "Kew Gardens, 4 Chalk Walk, London, SW23 2FH"}}
        </dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m">Specimen details</h2>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Scientific name</dt>
        <dd class="govuk-summary-list__value"><em>{{data['speciesName'] or "Falco peregrinus"}}</em></dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Description</dt>
        <dd class="govuk-summary-list__value">
          {{data['specimenDescription'] or "Living animal"}}<br>
          Sex: {{data['gender'] or "Male"}}<br>
          DOB: {{data['hatch-date-day'] or "12"}} {{data['hatch-date-month'] or "June"}} {{data['hatch-date-year'] or "2023"}}
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Identification</dt>
        <dd class="govuk-summary-list__value">
          {{data['identificationMark'] or "Closed ring"}}: {{data['identificationMark-1'] or "XYZ-123-2023"}}
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Quantity</dt>
        <dd class="govuk-summary-list__value">{{data['quantity'] or "1"}}</dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m">Transaction details</h2>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Permit type</dt>
        <dd class="govuk-summary-list__value">{{ data['permitType'] | capitalize or "Export" }}</dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Country of origin</dt>
        <dd class="govuk-summary-list__value">{{data['originCountry'] or "United Kingdom"}}</dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Source code</dt>
        <dd class="govuk-summary-list__value">{{data['sourceCode'] or "C"}}</dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Purpose code</dt>
        <dd class="govuk-summary-list__value">{{data['purposeCode'] or "T"}}</dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m">Remarks</h2>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">Applicant remarks</dt>
        <dd class="govuk-summary-list__value">{{data['comment'] or "No additional remarks."}}</dd>
      </div>
    </dl>

    <div class="govuk-button-group">
      <button class="govuk-button govuk-button--secondary" data-module="govuk-button">
        Copy as new application
      </button>
      <a class="govuk-link" href="applicant-dashboard">Return to your applications</a>
    </div>

  </div>
</div>
{% endblock %}