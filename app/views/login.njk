{% extends "layout.html" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% set pageTitle = "Sign into your CITES account" %}

{% block content %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        
        {% if loginError %}
          {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: [
              {
                text: "Invalid username or password",
                href: "#username"
              }
            ]
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">Sign into your CITES account</h1>

        {# Action points to the represent page route #}
        <form action="v13/represent" method="post" novalidate>
          
          {{ govukInput({
            label: {
              text: "Username"
            },
            classes: "govuk-!-width-one-half",
            id: "username",
            name: "username",
            value: data['username'],
            autocomplete: "username"
          }) }}

          {{ govukInput({
            label: {
              text: "Password"
            },
            id: "password",
            name: "password",
            type: "password",
            autocomplete: "current-password"
          }) }}

          {{ govukButton({
            text: "Sign in"
          }) }}

        </form>

        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible" style="margin-top: 60px;">

      </div>
    </div>
{% endblock %}